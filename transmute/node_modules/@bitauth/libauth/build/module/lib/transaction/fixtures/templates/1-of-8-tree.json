        "lock": {
            "lockingType": "p2sh",
            "name": "1-of-8 Tree Vault",
            "script": "OP_4 OP_PICK OP_HASH160 sort_cat OP_HASH160 sort_cat OP_HASH160 sort_cat OP_HASH160 <$(root)> OP_EQUALVERIFY OP_CHECKSIG"
